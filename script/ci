#!/bin/bash

export CI=true

export NODE_OPTIONS=â€“max_old_space_size=4096

cd "$(dirname "$0")/.." || exit 111

TEST=$1

if [[ "$TEST" = "lint" ]]; then
    ./bin/lint || exit 112
elif [[ "$TEST" = "typecheck" ]]; then
    yarn run tsc --noemit
elif [[ "$TEST" = "e2e" ]]; then
    ./bin/test-e2e
else
  ./bin/test $TEST --all --verbose
fi
